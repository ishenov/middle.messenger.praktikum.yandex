.notification {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 1000;
  min-width: 250px;
  padding: 15px 20px;
  border-radius: 5px;
  color: #fff;
  font-size: 16px;
  text-align: center;
}

.notification.success {
  background-color: #4CAF50;
}

.notification.error {
  background-color: #f44336;
}

.notification.info {
  background-color: #2196F3;
}
