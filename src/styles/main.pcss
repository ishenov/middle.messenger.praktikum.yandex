:root {
    --primary-color: #3369F3;
    --secondary-color: #2c3e50;
    --background-color: #FFF;
    --text-color: #1E1E1E;
    --error-color: #FF2F2F;
}

body {
    box-sizing: border-box;
    color: var(--text-color);
    font-family: Arial, sans-serif;
    line-height: 1.6;
    margin: 0;
    padding: 0;
}

.login-page {
    border-radius: 12px;
    box-shadow: 0 0 10px rgb(0 0 0 / 10%);
    margin: 10vh auto;
    padding: 30px;
    width: 340px;

    & input, & button {
        width: 100%;
    }
}

.login-page__title {
    font-size: 20px;
    text-align: center;
}

.input-wrapper {
    margin-bottom: 16px;
    position: relative;
}

.input, .select, .button {
    border: none;
    border-bottom: 1px solid var(--primary-color);
    box-sizing: border-box;
    margin: 0 0 10px;
    outline: none;
    padding: 10px;
    transition: border-color 0.2s ease;

    &:focus-visible {
        outline: none;
    }
}

.input--error {
    border-bottom-color: var(--error-color);
    margin-bottom: 0;
}

.input-error {
    color: var(--error-color);
    display: none;
    font-size: 12px;
    margin-top: 4px;
    padding: 0;
    z-index: 10;
}

.button {
    background-color: var(--primary-color);
    border: none;
    border-radius: 8px;
    color: white;
    cursor: pointer;
    transition: background-color 0.3s ease;

    &:hover {
        background-color: color-mix(in srgb, var(--primary-color) 80%, black);
    }

    &:disabled {
        background-color: #bdc3c7;
        cursor: not-allowed;
    }

    &.secondary {
        background-color: transparent;
        color: var(--primary-color);
    }
}

.not-found-page, .server-error-page {
    margin-top: 20%;
    text-align: center;
}
