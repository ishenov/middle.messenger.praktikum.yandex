<div class="profile-page">
    <div class="sidebar">
        <button id="back-button" class="back-button">&#8592;</button>
    </div>

    <form id="profile-form" class="profile-container">
        <div class="profile-avatar">
            <div class="avatar large"></div>
        </div>
        <div class="profile-name">{{firstName}}</div>

        <div class="profile-info">
            <div class="row">
                <div class="label">Почта</div>
                <div class="value">
                    {{#if isEdit}}
                        {{> ValidatedInput id="email" class="profile-input" type="email" value="{{email}}" fieldName="email"}}
                    {{else}}
                        {{email}}
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="label">Логин</div>
                <div class="value">
                    {{#if isEdit}}
                        {{> ValidatedInput id="login" class="profile-input" type="text" value="{{login}}" fieldName="login"}}
                    {{else}}
                        {{login}}
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="label">Имя</div>
                <div class="value">
                    {{#if isEdit}}
                        {{> ValidatedInput id="first_name" class="profile-input" type="text" value="{{firstName}}" fieldName="first_name"}}
                    {{else}}
                        {{firstName}}
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="label">Фамилия</div>
                <div class="value">
                    {{#if isEdit}}
                        {{> ValidatedInput id="second_name" class="profile-input" type="text" value="{{secondName}}" fieldName="second_name"}}
                    {{else}}
                        {{secondName}}
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="label">Имя в чате</div>
                <div class="value">
                    {{#if isEdit}}
                        {{> Input id="display_name" class="profile-input" type="text" value="{{displayName}}"}}
                    {{else}}
                        {{displayName}}
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="label">Телефон</div>
                <div class="value">
                    {{#if isEdit}}
                        {{> ValidatedInput id="phone" class="profile-input" type="tel" value="{{phone}}" fieldName="phone"}}
                    {{else}}
                        {{phone}}
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="profile-actions">
            {{#if isEdit}}
                {{> Button text="Сохранить" class="edit-link secondary" type="submit"}}
            {{else}}
                {{> Button text="Изменить данные" class="edit-link secondary" type="button"}}
            {{/if}}

            {{> Button text="Изменить пароль" class="edit-link secondary" type="button"}}
            {{> Button  text="Выйти" class="logout-link secondary" type="button"}}
        </div>
    </form>
</div>
