<div class="profile-page">
    <div class="sidebar">
        <button id="back-button" class="back-button">&#8592;</button>
    </div>

    <form id="change-password-form" class="profile-container">
        <div class="profile-avatar">
            <div class="avatar large"></div>
        </div>
        <div class="profile-name">{{firstName}}</div>

        <div class="profile-info">
            <div class="row">
                <div class="label">Старый пароль</div>
                <div class="value">
                    {{#if isEdit}}
                        {{> ValidatedInput id="oldPassword" type="password" value="{{oldPassword}}" fieldName="password"}}
                    {{else}}
                        {{email}}
                    {{/if}}
                </div>
            </div>

            <div class="row">
                <div class="label">Новый пароль</div>
                <div class="value">
                    {{#if isEdit}}
                        {{> ValidatedInput id="newPassword" type="password" value="{{newPassword}}" fieldName="password"}}
                    {{else}}
                        {{login}}
                    {{/if}}
                </div>
            </div>
        </div>

        <div class="profile-actions">
            {{#if isEdit}}
                {{> Button text="Сохранить" class="edit-link secondary" type="submit"}}
            {{else}}
                {{> Button text="Изменить данные" class="edit-link secondary" type="button"}}
            {{/if}}
        </div>
    </form>
</div>
