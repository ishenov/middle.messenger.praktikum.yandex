<div class="profile-page">
    <div class="sidebar">
        <button id="back-button" class="back-button">&#8592;</button>
    </div>

    <form id="change-password-form" class="profile-container">
        <div class="profile-avatar">
            <div class="avatar large"></div>
        </div>
        <div class="profile-name">{{firstName}}</div>

        <div class="profile-info">
            <div class="row">
                <div class="label">Старый пароль</div>
                <div class="value">
                    {{{ oldPasswordInput }}}
                </div>
            </div>

            <div class="row">
                <div class="label">Новый пароль</div>
                <div class="value">
                    {{{ newPasswordInput }}}
                </div>
            </div>
        </div>

        <div class="profile-actions">
            {{{ saveButton }}}
        </div>
    </form>
</div>
