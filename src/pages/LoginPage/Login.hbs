<div class="login-page">
    <h1 class="login-page-title">Войти</h1>
    <form id="login-form">
        {{> ValidatedInput id="login" type="text" placeholder="Логин" fieldName="login"}}
        {{> ValidatedInput id="password" type="password" placeholder="Пароль" fieldName="password"}}
        {{> Button id="signin" text="Авторизоваться" type="submit"}}
        {{> Button id="signup" text="Зарегистрироваться" class="secondary" type="button"}}
    </form>
</div>
